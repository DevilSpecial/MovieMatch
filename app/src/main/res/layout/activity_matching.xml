<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_gravity="center"
    android:background="#22222E"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Matching">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingBottom="30dp"
        android:layout_gravity="center"
        android:orientation="vertical"
>

        <TextView
android:layout_marginTop="10dp"
            android:id="@+id/TvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Choose Genres"
            android:textColor="@color/white"
            android:textSize="40sp" />
        <TextView
            android:textColor="#A29E9E"
            android:textSize="18sp"
            android:fontFamily="@font/poppins"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="1dp"
            android:layout_height="wrap_content"
            android:text="Atmost 3 genres allowed"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/genreChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:chipSpacing="7dp"

            android:textAlignment="center"
            app:chipSpacingHorizontal="20dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TvTitle">

        </com.google.android.material.chip.ChipGroup>

        <androidx.appcompat.widget.AppCompatButton
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Swiping"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins"
            android:textAlignment="center"
            android:background="@drawable/signin_btn_submit"
            android:textSize="20sp"
            android:id="@+id/btn_submit"
            android:paddingVertical="15dp"
            android:layout_marginHorizontal="25dp"
            android:textColor="@color/white"
       />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
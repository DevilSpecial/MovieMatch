<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Border color -->
    <solid android:color="#D94C54" />

    <!-- Background color inside the border -->
    <stroke
        android:width="2dp"
        android:color="#2D2C39" />

    <!-- Control the inner padding of the background -->
    <padding
        android:left="3dp"
        android:right="3dp"
        android:top="3dp"
        android:bottom="3dp" />
</shape>
